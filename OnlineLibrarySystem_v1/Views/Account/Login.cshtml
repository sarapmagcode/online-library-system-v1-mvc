@model OnlineLibrarySystem_v1.Models.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h3>Login</h3>

<div class="row">

	<form asp-controller="account" asp-action="login" class="col-12 col-md-6 col-lg-4">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<!-- Username -->
		<div class="mb-3">
			<label asp-for="Username" class="form-label"></label>
			<input 
				asp-for="Username" 
				class="form-control" 
				type="text" 
				placeholder="Enter username"
			/>
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>

		<!-- Password -->
		<div class="mb-3">
			<label asp-for="Password" class="form-label"></label>
			<input 
				asp-for="Password" 
				class="form-control" 
				type="password" 
				placeholder="Enter password" 
			/>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<button class="btn btn-primary" type="submit">Login</button>

		<!-- Redirect to Signup -->
		<div class="mt-3">
			<p class="mb-0">
				Don't have an account yet?
				<a asp-controller="account" asp-action="signup" class="fw-semibold text-decoration-none">Signup</a>
			</p>
		</div>
	</form>
</div>

@section Scripts
{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}