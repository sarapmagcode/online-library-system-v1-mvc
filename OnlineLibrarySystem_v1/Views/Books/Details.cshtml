@model OnlineLibrarySystem_v1.Models.ViewModels.BookViewModel

@{
	ViewData["Title"] = "Book Details";
}


<div class="container py-4">
    <div class="row">
        <!-- Book Cover/Image Column -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="https://placehold.co/600x400" alt="Book cover" class="card-img-top" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="text-secondary">@Model.Book.Category.Name</p>
                        <small class="text-muted">Stock: @Model.Book.CopiesAvailable/@Model.Book.TotalCopies</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Book Details Column -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                @if (ViewData["Role"] != null && ViewData["Role"].Equals("admin"))
                {
				    <div class="card-header">
                        <a
                            asp-controller="books"
                            asp-action="delete"
                            asp-route-id="@Model.Book.Id"
                            class="btn btn-outline-danger me-md-2 float-end"
                        >
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a 
                            asp-controller="books"
                            asp-action="edit" 
                            asp-route-id="@Model.Book.Id"
                            class="btn btn-outline-secondary me-md-2 float-end"
                        >
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                }

                <div class="card-body">
                    <h2 class="card-title mb-3">@Model.Book.Title</h2>
                    <h6 class="card-subtitle mb-3 text-muted">by <strong>@Model.Book.Author</strong></h6>

                    <div class="mb-4">
                        <h5 class="text-secondary mb-2">Description</h5>
                        <p class="card-text">@Model.Book.Description</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button class="btn btn-primary me-md-2" type="button">Borrow Book</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>