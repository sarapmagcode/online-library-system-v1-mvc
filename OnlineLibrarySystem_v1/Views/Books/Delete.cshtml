@model OnlineLibrarySystem_v1.Models.ViewModels.BookViewModel

@{
	ViewData["Title"] = "Delete Book";
}

<h3>Delete Book</h3>

<h5>Are you sure you want to delete this?</h5>
<hr />

<dl class="row">
	<!-- Title -->
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Book.Title)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.Title)
	</dd>

	<!-- Description -->
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Book.Description)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.Description)
	</dd>

	<!-- Author -->
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Book.Author)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.Author)
	</dd>

	<!-- Category -->
	<dt class="col-sm-2">Category</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.Category.Name)
	</dd>

	<!-- Copies Available -->
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Book.CopiesAvailable)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.CopiesAvailable)
	</dd>

	<!-- Total Copies -->
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Book.TotalCopies)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Book.TotalCopies)
	</dd>
</dl>

<form asp-controller="books" asp-action="delete">
	<input type="hidden" asp-for="Book.Id" />
	<button class="btn btn-danger" type="submit">Delete</button>
	<a 
		class="btn btn-outline-secondary"
		asp-controller="books"
		asp-action="details" 
		asp-route-id="@Model.Book.Id"
	>
		Cancel
	</a>
</form>