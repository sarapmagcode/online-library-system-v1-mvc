@model OnlineLibrarySystem_v1.Models.ViewModels.CategoryViewModel

@{
	ViewData["Title"] = "Delete Category";
}

<h5>Delete Category</h5>

<p>Are you sure you want to delete this?</p>

<div>
	<h5>Category:</h5>
	<hr />

	<dl class="row">
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Html.DisplayFor(modelItem => modelItem.Name)</dd>
	</dl>

	<form asp-controller="categories" asp-action="delete">
		<input asp-for="Id" type="hidden" />

		<button class="btn btn-danger" type="submit">Delete</button>
		<a asp-controller="categories" asp-action="index" class="btn btn-outline-secondary">Cancel</a>
	</form>
</div>